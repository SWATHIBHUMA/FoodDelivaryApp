package com.foodDelivaryApp.Utilities;

import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
import java.util.Random;

public class OrderIdGenerator {
	public static String generateOrderId() {
        // Get the current date and time
        LocalDateTime orderDate = LocalDateTime.now();
        DateTimeFormatter formatter = DateTimeFormatter.ofPattern("yyyyMMddHHmmss");
        String formattedOrderDate = orderDate.format(formatter);

        // Generate a random string of characters and numbers
        String randomString = generateRandomString(6); // Adjust the length as needed

        // Combine date, time, and random string to create the order ID
        String orderId = formattedOrderDate + randomString;

        return orderId;
    }

    private static String generateRandomString(int length) {
        String characters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
        StringBuilder randomString = new StringBuilder(length);

        Random random = new Random();
        for (int i = 0; i < length; i++) {
            randomString.append(characters.charAt(random.nextInt(characters.length())));
        }

        return randomString.toString();
    }

}
