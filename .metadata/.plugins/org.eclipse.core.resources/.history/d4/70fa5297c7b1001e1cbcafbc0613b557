									<button onclick="incrementItem('<%= cartItem.getMenuid() %>')">+</button>
			                        <span id="<%= cartItem.getMenuid() %>">1</span>
			                        <button onclick="decrementItem('<%= cartItem.getMenuid() %>')">-</button>
			                        
			                        
			                        const plus = document.querySelector(".plus"),
		    	  minus = document.querySelector(".minus"),
		    	  num = document.querySelector(".num");
		    let a=1;
		    plus.addEventListener("click",()=>{
		    	a++;
		    	num.innerText = a;
		    	console.log(a);
		    });
		    
		    minus.addEventListener("click",()=>{
		    	a--;
		    	num.innerText = a;
		    	console.log(a);
		    });
		    
		    
		    function incrementItem(itemId) {
		        var item = findItemById(itemId);
		        if (item) {
		            item.quantity++;
		            updateItemDisplay(itemId, item.quantity);
		            updateTotalPrice();
		        }
		    }
		
		    function decrementItem(itemId) {
		        var item = findItemById(itemId);
		        if (item && item.quantity > 1) {
		            item.quantity--;
		            updateItemDisplay(itemId, item.quantity);
		            updateTotalPrice();
		        }
		    }
		
		    function removeItem(itemId) {
		        cartItems = cartItems.filter(item => item.id !== itemId);
		        updateItemDisplay(itemId, 0);
		        updateTotalPrice();
		    }
		
		    function updateTotalPrice() {
		        // Calculate the total price based on the items in the cart
		        var totalPrice = 0;
		        for (var i = 0; i < cartItems.length; i++) {
		            totalPrice += cartItems[i].price * cartItems[i].quantity;
		        }
		
		        // Update the display of total price
		        document.getElementById("total-price").textContent = totalPrice;
		    }
		
		    function placeOrder() {
		        // Implement the logic to place the order
		        // Include selected items, delivery address, and payment method
		
		        // Example: Display a confirmation message
		        alert("Order placed successfully!");
		    }
		
		    // Helper function to find an item by ID in the cartItems array
		    function findItemById(itemId) {
		        return cartItems.find(item => item.id === itemId);
		    }
		
		    // Helper function to update the display of item quantity
		    function updateItemDisplay(itemId, quantity) {
		        var quantityElement = document.getElementById(itemId);
		        if (quantityElement) {
		            quantityElement.textContent = quantity;
		        }
		        
		        
		        
		        
