package com.foodDelivaryApp.servlets;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.foodDelivaryApp.model.Order;

/**
 * Servlet implementation class OrderServlet
 */
@WebServlet("/OrderServlet")
public class OrderServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    public OrderServlet() {
        super();
    }

    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        // Retrieve the total amount from the request
        double totalAmount = Double.parseDouble(request.getParameter("totalAmount"));

        // Create an instance of your Order class (replace Order with your actual class)
        Order order = new Order();

        // Set the total amount in the Order object
        order.setTotalAmount(totalAmount);

        // Perform any additional processing or database operations as needed

        // Forward the Order object to the ordernow.jsp page
        request.setAttribute("order", order);
        RequestDispatcher dispatcher = request.getRequestDispatcher("ordernow.jsp");
        dispatcher.forward(request, response);
    }
}
